<div class="relative m-4">
  <button
    id="openPopup"
    class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600"
  >
    Sign Up
  </button>

  <!-- Popup overlay -->
  <div
    id="popup"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <!-- Popup content -->
    <div class="bg-white p-6 rounded-lg shadow-lg w-80">
      <button
        id="closePopup"
        class="absolute top-3 right-3 text-xl text-gray-500 hover:text-gray-700"
      >
        &times;
      </button>
      <h2 class="text-lg font-bold mb-4">Popup Title</h2>
      <p class="text-gray-600 mb-4">
        This is a simple popup created with Tailwind CSS!
      </p>
      <button
        id="closePopupBtn"
        class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600"
      >
        Close
      </button>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const popup = document.getElementById("popup");
    const openPopup = document.getElementById("openPopup");
    const closePopupButtons = document.querySelectorAll(
      "#closePopup, #closePopupBtn"
    );

    // Show the popup
    openPopup.addEventListener("click", () => {
      popup.classList.remove("hidden");
    });

    // Hide the popup
    closePopupButtons.forEach((button) =>
      button.addEventListener("click", () => {
        popup.classList.add("hidden");
      })
    );
  });
</script>
