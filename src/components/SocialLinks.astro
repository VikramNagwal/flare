const sizeClasses = {
  small: "w-5 h-5",
  medium: "w-6 h-6",
  large: "w-8 h-8",
};

const layoutClasses = {
  horizontal: "flex-row space-x-3 space-y-0",
  vertical: "flex-col space-y-3 space-x-0",
};

const themeStyles = {
  default: "text-gray-600 hover:text-gray-800",
  colored: "hover:scale-110 transition-transform",
  outlined: "border border-gray-200 rounded-full p-2 hover:bg-gray-50",
};
---

<div
  class={`flex justify-between mx-6 items-center ${layoutClasses[layout]} ${themeStyles[theme]} ${className}`}
>
  {
    socialNetworks.map((network) => (
      <a
        href={network.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`${network.name} profile`}
        class="social-link"
        style={theme === "colored" ? `color: ${network.color}` : ""}
      >
        <Fragment set:html={network.icon} />
      </a>
    ))
  }
</div>

<style define:vars={{ size }}>
  .social-link {
    display: inline-block;
    width: var(--size, 24px);
    height: var(--size, 24px);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    opacity: 0.8;
  }
</style>

<script>
  // Optional interactivity script
  document.querySelectorAll(".social-link").forEach((link) => {
    link.addEventListener("mouseenter", (e) => {
      (e.currentTarget as HTMLElement).style.transform = "scale(1.1)";
    });

    link.addEventListener("mouseleave", (e) => {
      (e.currentTarget as HTMLElement).style.transform = "scale(1)";
    });
  });
</script>
